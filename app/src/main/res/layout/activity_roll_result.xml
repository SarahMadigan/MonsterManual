<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/roll_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strength Saving Throw"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/roll_breakdown"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/roll_breakdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roll_header"
        android:layout_margin="10dp"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/roll_dismiss_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/roll_breakdown"
        android:layout_marginTop="20dp"/>

</android.support.constraint.ConstraintLayout>